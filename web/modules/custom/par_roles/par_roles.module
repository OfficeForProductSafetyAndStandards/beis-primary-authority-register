<?php

/**
 * @file
 * Contains par_roles.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function par_roles_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the par_roles module.
    case 'help.page.par_roles':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Defines roles for PAR Users and funnels users down the right journey&#039;s depending on their roles.') . '</p>';
      return $output;

    default:
  }
}

function par_roles_user_presave($account) {
  $par_data_manager = \Drupal::service('par_data.manager');
  // Add the correct roles to this user account also.
  if ($par_data_manager->isMemberOfAuthority($account) && !$account->hasRole('par_authority')) {
    $account->addRole('par_authority');
  }
  if ($par_data_manager->isMemberOfCoordinator($account) && !$account->hasRole('par_coordinator')) {
    $account->addRole('par_coordinator');
  }
  if ($par_data_manager->isMemberOfBusiness($account) && !$account->hasRole('par_business')) {
    $account->addRole('par_business');
  }
}

function par_roles_user_insert($account) {
  $par_data_manager = \Drupal::service('par_data.manager');
  $par_data_manager->linkPeople($account);
}

function par_roles_user_update($account) {
  $par_data_manager = \Drupal::service('par_data.manager');
  $par_data_manager->linkPeople($account);
}
