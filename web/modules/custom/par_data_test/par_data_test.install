<?php
/**
 * @file
 * Installation hooks for par_data_test module.
 */

/**
 * Implements hook_uninstall().
 */
function par_data_test_uninstall() {
  // Remove data.
  \Drupal::service('par_data_test.manager')->removeData();

  // Unset State.
  \Drupal::state()->delete('par_data_test.package');
}

/**
 * Implements hook_install().
 */
function par_data_test_install() {
  $data_controller = \Drupal::service('par_data_test.manager');
  // Set the package name.
  $data_controller->getPackageName();
}
