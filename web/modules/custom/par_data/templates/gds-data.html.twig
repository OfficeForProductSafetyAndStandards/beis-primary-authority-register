{#
/**
 * @file
 * Default theme implementation to present data in the gds format.
 *
 * Available variables:
 * - value: A collection of all the available custom entity types.
 * - label: A human readable name for this entity type.
 *
 * @see template_preprocess_gds_data()
 *
 * @ingroup themeable
 */
#}

{% set id = label|clean_unique_id %}

<div{{ attributes.addClass('data-item') }}>
  <span class="data-number" aria-labelledby="{{ id }}-caption">{{ value }}</span>
  <p class="data-caption" title="{{ description }}" id="{{ id }}-caption">{{ label }}</p>
</div>
