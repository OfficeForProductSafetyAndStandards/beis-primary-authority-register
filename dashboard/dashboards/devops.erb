<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":1,"size_y":1},{"col":4,"row":1,"size_x":1,"size_y":1},{"col":3,"row":1,"size_x":1,"size_y":1},{"col":2,"row":1,"size_x":1,"size_y":1},{"col":1,"row":2,"size_x":1,"size_y":1},{"col":2,"row":2,"size_x":1,"size_y":1},{"col":5,"row":1,"size_x":1,"size_y":1},{"col":5,"row":2,"size_x":1,"size_y":2},{"col":3,"row":2,"size_x":1,"size_y":2},{"col":1,"row":3,"size_x":2,"size_y":1},{"col":4,"row":2,"size_x":1,"size_y":2}]')
  Dashing.widget_base_dimensions = [370, 340]
  Dashing.numColumns = 5
});
</script>


<% content_for :title do %>1080p dashboard<% end %>

<div class="gridster">

  <ul>

    <!-- Production Monitoring Stats -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="production_build_version" data-view="Text" data-title="Production Version" data-moreinfo="Current build version" data-prefix="#"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="production_response_time" data-view="Number" data-title="Response Time" data-moreinfo="Response time in milliseconds"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="production_health" data-view="HotStatus" data-title="Production Health" data-message="Uptime of service"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="staging_build_version" data-view="Text" data-title="Staging Version" data-moreinfo="Current build version" data-prefix="#"></div>
    </li>

    <!-- Master Branch Test/Build Stats -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="master_build_version" data-view="Text" data-title="Master Build" data-moreinfo="Master branch build version" data-prefix="#"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="master_build_status" data-view="HotStatus" data-title="Master Status" data-message="Master branch build status"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="master_accessibility_status" data-view="HotStatus" data-title="Accessibility Status"></div>
    </li>

    <!-- Dev Stats -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
        <div data-id="travis_latest_builds" data-view="Travis" data-unordered="true" data-title="Latest builds"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
        <div data-id="github_latest_prs" data-view="PullRequests" data-header="Open Pull Requests"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
        <div data-id="master_test_results" data-view="TestResults" data-header="Test Results"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
        <div data-id="github_latest_commits" data-view="LatestCommits" data-header="Latest Commits"></div>
    </li>

  </ul>

</div>
