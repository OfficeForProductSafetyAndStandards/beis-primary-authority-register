{
    "name": "TransformCore/beis-par-beta",
    "description": "The beta platform for BEIS PAR.",
    "type": "project",
    "license": "",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "~2.3.0",
        "drupal/address": "~1.1.0",
        "drupal/better_exposed_filters": "~3.0.0-alpha2",
        "drupal/clamav": "~1.0.0",
        "drupal/composer_manager": "~1.0.0-rc2",
        "drupal/config_update": "~1.3.0",
        "drupal/core": "~8.3.0",
        "drupal/csv_serialization": "~1.0.0",
        "drupal/features": "~3.5.0",
        "drupal/file_entity": "~2.0.0@beta",
        "drupal/flysystem": "~1.0.0",
        "drupal/flysystem_s3": "~1.0.0@alpha",
        "drupal/health_check": "1.0.0",
        "drupal/inline_entity_form": "~1.0.0@beta",
        "drupal/login_destination": "1.x-dev",
        "drupal/mailsystem": "~4.1.0",
        "drupal/pagerer": "~1.1.0",
        "drupal/range": "~1.1.0",
        "drupal/robotstxt": "~1.1.0",
        "drupal/swiftmailer": "~1.0.0-beta1",
        "drupal/trance": "~1.0.0",
        "drupal/twig_field_value": "~1.1.0",
        "drupal/twig_tweak": "~1.8.0",
        "drupal/views_data_export": "~1.0.0-alpha4",
        "drupal/views_field_view": "~1.0.0-beta2",
        "drupal/xmlsitemap": "~1.0.0@alpha",
        "drush/drush": "~8.1.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "~8.2.0",
        "drupal/config_inspector": "^1.0@beta",
        "drupal/console": "~1.0.0",
        "drupal/devel": "~1.0.0-rc2",
        "drupal/examples": "dev-1.x",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "excludes": [
                "robots.txt",
                "web.config"
            ]
        },
        "patches": {
            "drupal/health_check": {
                "Health Check doesn't check Drupal application": "https://www.drupal.org/files/issues/health_check_doesn_t-2892294-2.patch"
            },
            "drupal/trance": {
                "Don't assume base tables": "https://www.drupal.org/files/issues/don_t_assume_base_tables-2895360-2.patch"
            },
            "drush/drush": {
                "Drush sql-dump compatibility with PostgresSQL 9.5+": "./patches/drush-sqldump-postgres95.patch"
            },
            "drupal/flysystem": {
                "Add Drush commands for sending and receiving files": "./patches/flysystem-drush-command.patch"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    }
}
